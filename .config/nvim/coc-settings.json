{
  "languageserver": {
    "golang": {
      "command": "~/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  },
  "python.jediEnabled": false,
  "suggest.noselect": false
}
